<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.emission.abnc.emission">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.READ_PROFILE"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity
                android:name=".LoginActivity"
                android:label="@string/title_activity_login"/>
        <activity
                android:name=".Page1"
                android:label="@string/title_activity_page1"
                android:theme="@style/AppTheme.NoActionBar"/>
        <activity
                android:name="com.abnc.emission.Page1"
                android:label="@string/title_activity_page1"/>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".CarInputActivity"
                android:label="@string/title_activity_car_input"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
                android:name="com.abnc.emission.CarInputActivity"
                android:label="@string/title_activity_car_input"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>