<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".CarInputActivity"
    tools:showIn="@layout/activity_car_input">

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/makeSpinner"
        tools:layout_editor_absoluteY="162dp" android:entries="@array/make_array"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
        app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp" android:background="@color/dropDownBackground"/>
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/modelSpinner"
        android:entries="@array/model_array"
        app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp" android:background="@color/dropDownBackground"
        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
        android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/makeSpinner"
        android:layout_marginBottom="271dp" app:layout_constraintBottom_toTopOf="@+id/yearSpinner"/>
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/yearSpinner"
        android:entries="@array/year_array"
        app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp" android:background="@color/dropDownBackground"
        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
        />

</android.support.constraint.ConstraintLayout>