<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="#13A001"
                                                   app:layout_behavior="@string/appbar_scrolling_view_behavior"
                                                   tools:context=".CarInputActivity"
                                                   tools:showIn="@layout/activity_car_input">

    <TextView
            android:text="your car"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="140dp" android:id="@+id/textView2" android:textColor="#ffffff"
            android:textSize="36sp"
            app:layout_constraintTop_toBottomOf="@+id/imageView4"
            android:fontFamily="@font/nexa_light"/>
    <Spinner
            android:id="@+id/makeSpinner"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@color/dropDownBackground"
            android:entries="@array/make_array"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="262dp" android:layoutAnimation="@android:anim/fade_in"/>

    <Spinner
            android:id="@+id/modelSpinner"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="8dp"
            android:background="@color/dropDownBackground"
            android:entries="@array/model_array"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/makeSpinner"
            android:textAlignment="center" android:layoutAnimation="@android:anim/fade_in"/>

    <Spinner
            android:id="@+id/yearSpinner"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@color/dropDownBackground"
            android:entries="@array/year_array"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/modelSpinner" android:textAlignment="center"
            android:layoutAnimation="@android:anim/fade_in"/>

    <ImageView
            android:id="@+id/imageView4"
            android:layout_width="210dp"
            android:layout_height="137dp"
            app:srcCompat="@drawable/ic_hacklogo_transparent" tools:layout_editor_absoluteY="16dp"
            tools:layout_editor_absoluteX="100dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>