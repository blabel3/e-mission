<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="@color/projectGreen"
                                                   app:layout_behavior="@string/appbar_scrolling_view_behavior"
                                                   tools:context=".Page1"
                                                   tools:showIn="@layout/activity_page1">

    <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:text="@string/app_name"
            android:textColor="@color/colorAccent"
            android:textSize="36sp"
            app:fontFamily="@font/font_nexa"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.52"/>

    <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/big_logo_width"
            android:layout_height="@dimen/big_logo_height"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/textView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/ic_hacklogo_transparent"/>
    <Button
            android:text="Button"
            android:layout_width="233dp"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="385dp"
            tools:layout_editor_absoluteX="89dp" android:id="@+id/button2"
            tools:text="Sign in with Google"
            android:textColor="#000000" android:textAllCaps="false" android:elevation="2dp"
    />
    <ImageView
            android:layout_width="41dp"
            android:layout_height="36dp" app:srcCompat="@drawable/ic_google_g_logo"
            tools:layout_editor_absoluteY="391dp" tools:layout_editor_absoluteX="89dp" android:id="@+id/imageView3"
            android:elevation="3dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>