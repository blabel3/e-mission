<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:id="@+id/datavisualization"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".ui.datavisualization.DataVisualization"
                                                   android:background="@color/graycolor">

    <TextView
            android:text="You Drove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/heading" app:fontFamily="@font/font_nexa"
            android:textSize="24sp" android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="332dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.498" android:elevation="3dp"/>
    <TextView
            android:text="000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mileage" android:textSize="96sp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.497"
            android:layout_marginTop="40dp" app:layout_constraintTop_toBottomOf="@+id/heading" android:elevation="3dp"
            android:fontFamily="@font/font_nexa"/>
    <TextView
            android:text="miles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/units"
            app:layout_constraintBaseline_toBaselineOf="@+id/mileage" app:layout_constraintStart_toEndOf="@+id/mileage"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"/>
    <View
            android:layout_width="380dp"
            android:layout_height="163dp" tools:layout_editor_absoluteY="43dp"
            android:id="@+id/view3" android:background="@color/colorAccent" android:elevation="1dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="You saved"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="116dp" android:id="@+id/textView4" android:elevation="3dp"
            android:textSize="36sp" android:fontFamily="@font/font_nexa" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="@+id/view3"/>
    <TextView
            android:text="000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5" android:elevation="3dp"
            android:fontFamily="@font/font_nexa" android:textSize="72sp"
            app:layout_constraintStart_toEndOf="@+id/textView7" android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/view3"/>
    <TextView
            android:text="$"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="116dp" android:id="@+id/textView7"
            android:elevation="3dp" android:fontFamily="@font/font_nexa" android:textSize="24sp"
            android:layout_marginBottom="12dp" app:layout_constraintBottom_toBottomOf="@+id/textView5"/>

</androidx.constraintlayout.widget.ConstraintLayout>
